<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<VBox prefHeight="500.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <HBox alignment="CENTER_LEFT" spacing="4.0">
         <children>
            <Button fx:id="btnAdd" mnemonicParsing="false" text="New Expense" />
            <Button fx:id="btnEdit" mnemonicParsing="false" text="Edit" />
            <Button fx:id="btnDelete" mnemonicParsing="false" text="Delete" />
            <Separator orientation="VERTICAL" />
            <ComboBox fx:id="cbTypes" prefWidth="150.0" promptText="Filter by Type" />
         </children>
         <padding>
            <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
         </padding>
      </HBox>
      <ListView fx:id="listview" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS" />
   </children>
   <stylesheets>
      <URL value="@styles.css" />
      <URL value="@icons_styles.css" />
   </stylesheets>
</VBox>
