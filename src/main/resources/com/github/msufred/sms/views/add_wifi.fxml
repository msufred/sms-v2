<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <HBox alignment="CENTER_LEFT" spacing="8.0">
         <children>
            <Label minWidth="80.0" styleClass="form-label" text="Name (SSID)" />
            <TextField fx:id="tfName" minWidth="200.0" styleClass="form-field" />
         </children>
         <padding>
            <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
         </padding>
      </HBox>
      <HBox alignment="CENTER_LEFT" spacing="8.0">
         <children>
            <Label minWidth="80.0" styleClass="form-label" text="IP Address" />
            <TextField fx:id="tfIpAddress" minWidth="200.0" styleClass="form-field" />
         </children>
         <padding>
            <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
         </padding>
      </HBox>
      <HBox alignment="CENTER_LEFT" spacing="8.0">
         <children>
            <Label minWidth="80.0" styleClass="form-label" text="Status" />
            <ComboBox fx:id="cbStatus" minWidth="200.0" prefWidth="150.0" styleClass="form-combobox" />
         </children>
         <padding>
            <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
         </padding>
      </HBox>
      <Label fx:id="lblError" minWidth="300.0" prefHeight="20.0" prefWidth="298.0" styleClass="form-label-error" text="Label" visible="false" />
      <HBox alignment="CENTER_RIGHT">
         <children>
            <Button fx:id="btnSave" defaultButton="true" minWidth="80.0" mnemonicParsing="false" styleClass="form-button-positve" text="Save">
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </Button>
         </children>
         <padding>
            <Insets left="8.0" right="8.0" />
         </padding>
         <VBox.margin>
            <Insets top="16.0" />
         </VBox.margin>
      </HBox>
   </children>
   <stylesheets>
      <URL value="@styles.css" />
      <URL value="@icons_styles.css" />
   </stylesheets>
   <padding>
      <Insets bottom="16.0" left="16.0" right="16.0" top="16.0" />
   </padding>
</VBox>
