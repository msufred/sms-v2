<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox prefWidth="450.0" spacing="8.0" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <HBox alignment="CENTER_LEFT" spacing="8.0">
         <children>
            <Label alignment="CENTER_RIGHT" minWidth="110.0" styleClass="form-label" text="Account" />
            <ComboBox fx:id="cbAccounts" promptText="Select Account" styleClass="form-combobox" />
            <Label fx:id="lblErrAccount" styleClass="label-error" />
         </children>
      </HBox>
      <HBox alignment="CENTER_LEFT" spacing="8.0">
         <children>
            <Label alignment="CENTER_RIGHT" minWidth="110.0" styleClass="form-label" text="Name" />
            <TextField fx:id="tfName" prefWidth="250.0" promptText="Required" styleClass="form-field" />
            <Label fx:id="lblErrName" styleClass="label-error" />
         </children>
      </HBox>
      <HBox alignment="CENTER_LEFT" spacing="8.0">
         <children>
            <Label alignment="CENTER_RIGHT" minWidth="110.0" styleClass="form-label" text="Type" />
            <ComboBox fx:id="cbTowerTypes" promptText="Select Tower Type" styleClass="form-combobox" />
            <Label fx:id="lblErrTowerType" styleClass="label-error" />
         </children>
      </HBox>
      <HBox alignment="CENTER_LEFT" spacing="8.0">
         <children>
            <Label alignment="CENTER_RIGHT" minWidth="110.0" styleClass="form-label" text="Tower Height (m)" />
            <TextField fx:id="tfTowerHeight" prefWidth="250.0" styleClass="form-field" text="0.0" />
         </children>
      </HBox>
      <HBox alignment="CENTER_LEFT" spacing="8.0">
         <children>
            <Label alignment="CENTER_RIGHT" minWidth="110.0" styleClass="form-label" text="Latitude" />
            <TextField fx:id="tfLatitude" prefWidth="250.0" styleClass="form-field" text="0.0" />
         </children>
      </HBox>
      <HBox alignment="CENTER_LEFT" spacing="8.0">
         <children>
            <Label alignment="CENTER_RIGHT" minWidth="110.0" styleClass="form-label" text="Longitude" />
            <TextField fx:id="tfLongitude" prefWidth="250.0" styleClass="form-field" text="0.0" />
         </children>
      </HBox>
      <HBox alignment="CENTER_LEFT" spacing="8.0">
         <children>
            <Label alignment="CENTER_RIGHT" minWidth="110.0" styleClass="form-label" text="Elevation" />
            <TextField fx:id="tfElevation" prefWidth="250.0" styleClass="form-field" text="0.0" />
         </children>
      </HBox>
      <HBox alignment="CENTER_LEFT" spacing="8.0">
         <children>
            <Label alignment="CENTER_RIGHT" minWidth="110.0" styleClass="form-label" text="Parent Tower" />
            <ComboBox fx:id="cbParentTower" promptText="Select Parent Tower" styleClass="form-combobox" />
         </children>
      </HBox>
      <HBox alignment="CENTER_RIGHT" spacing="8.0">
         <VBox.margin>
            <Insets top="32.0" />
         </VBox.margin>
         <children>
            <ProgressBar fx:id="progressBar" prefWidth="200.0" visible="false" />
            <Region HBox.hgrow="ALWAYS" />
            <Button fx:id="btnSave" mnemonicParsing="false" styleClass="form-button-positve" text="Save" />
            <Button fx:id="btnCancel" mnemonicParsing="false" styleClass="form-button-regular" text="Cancel" />
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="16.0" left="16.0" right="16.0" top="16.0" />
   </padding>
</VBox>
