<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefWidth="300.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <Label styleClass="form-title" text="WiFi Hotspot Revenue" />
      <HBox alignment="CENTER_LEFT" spacing="4.0">
         <children>
            <Label alignment="CENTER_RIGHT" prefWidth="70.0" styleClass="form-label" text="Amount" />
            <TextField fx:id="tfAmount" minWidth="100.0" prefWidth="200.0" promptText="Amount (Required)" styleClass="form-field" HBox.hgrow="ALWAYS" />
         </children>
         <padding>
            <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
         </padding>
         <VBox.margin>
            <Insets top="16.0" />
         </VBox.margin>
      </HBox>
      <HBox alignment="CENTER_LEFT" spacing="4.0">
         <children>
            <Label alignment="CENTER_RIGHT" prefWidth="70.0" styleClass="form-label" text="Date" />
            <DatePicker fx:id="datePicker" minWidth="100.0" prefWidth="200.0" styleClass="form-datepicker" HBox.hgrow="ALWAYS" />
         </children>
         <padding>
            <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
         </padding>
      </HBox>
      <Label fx:id="lblError" prefWidth="300.0" styleClass="form-label-error" text="Error" visible="false">
         <VBox.margin>
            <Insets bottom="16.0" top="16.0" />
         </VBox.margin>
      </Label>
      <HBox alignment="CENTER_RIGHT">
         <children>
            <Button fx:id="btnSave" mnemonicParsing="false" styleClass="form-button-positve" text="Save Changes" />
         </children>
      </HBox>
   </children>
   <stylesheets>
      <URL value="@styles.css" />
      <URL value="@icons_styles.css" />
   </stylesheets>
   <padding>
      <Insets bottom="16.0" left="16.0" right="16.0" top="16.0" />
   </padding>
</VBox>
