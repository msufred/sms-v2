<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefWidth="400.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <stylesheets>
      <URL value="@styles.css" />
      <URL value="@icons_styles.css" />
   </stylesheets>
   <children>
      <Label styleClass="form-title" text="Add Service" />
      <HBox alignment="CENTER_LEFT" spacing="8.0">
         <children>
            <Label alignment="CENTER_RIGHT" minWidth="70.0" styleClass="form-label" text="Name" />
            <TextField fx:id="tfName" minWidth="250.0" promptText="Name (Required)" styleClass="form-field" HBox.hgrow="ALWAYS" />
         </children>
         <padding>
            <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
         </padding>
         <VBox.margin>
            <Insets top="16.0" />
         </VBox.margin>
      </HBox>
      <HBox alignment="CENTER_LEFT" spacing="8.0">
         <children>
            <Label alignment="CENTER_RIGHT" minWidth="70.0" styleClass="form-label" text="Price (Php)" />
            <TextField fx:id="tfPrice" minWidth="250.0" promptText="Price (Required)" styleClass="form-field" HBox.hgrow="ALWAYS" />
         </children>
         <padding>
            <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
         </padding>
      </HBox>
      <HBox spacing="8.0">
         <children>
            <Label alignment="CENTER_RIGHT" minWidth="70.0" styleClass="form-label" text="Description">
               <HBox.margin>
                  <Insets top="8.0" />
               </HBox.margin></Label>
            <TextArea fx:id="taDescription" prefHeight="100.0" prefWidth="250.0" promptText="Description (Optional)" HBox.hgrow="ALWAYS" />
         </children>
         <padding>
            <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
         </padding>
      </HBox>
      <Label fx:id="lblError" styleClass="form-label-error" text="Error" visible="false" wrapText="true">
         <VBox.margin>
            <Insets left="16.0" right="16.0" top="16.0" />
         </VBox.margin>
      </Label>
      <HBox alignment="CENTER_RIGHT">
         <children>
            <Button fx:id="btnSave" mnemonicParsing="false" styleClass="form-button-positve" text="Add Service" />
         </children>
         <VBox.margin>
            <Insets bottom="16.0" left="16.0" right="16.0" top="16.0" />
         </VBox.margin>
      </HBox>
   </children>
   <padding>
      <Insets bottom="16.0" left="16.0" right="16.0" top="16.0" />
   </padding>
</VBox>
